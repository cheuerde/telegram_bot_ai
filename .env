#!/bin/bash

# Environment setup for cron jobs
# Source this file in cron or copy your environment variables here

# Set your actual API keys here (REQUIRED for cron to work):
export TELEGRAM_API_KEY="your_actual_telegram_bot_token_here"
export OPENAI_API_KEY="your_actual_openai_api_key_here"

# Add Python and other paths that might be needed
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH"

# Set locale to avoid encoding issues
export LC_ALL=C.UTF-8
export LANG=C.UTF-8
